<form method="post" action="{{ path('app_pokemon_delete', {'id': pokemon.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    {% if is_granted("ROLE_ADMIN")%}
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pokemon.id) }}">
        <button class="btn">Delete</button>
    {% endif %}
    
</form>
